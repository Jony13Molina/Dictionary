<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".DefinitionActivity">


    <ImageView
        android:id="@+id/back_img_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow_back"
        android:contentDescription="@string/str_back_desc">

    </ImageView>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/def_text_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"
        android:layout_margin="@dimen/margin_eight"
        android:textSize="@dimen/text_size_16"
        android:text="@string/tools_definition" />


</RelativeLayout>